<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".SkalaNyeriFragment">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:id="@+id/jointPainExposedMenuLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/joint_pain_exposed_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/joint_pain_input_edit_text"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--<com.google.android.material.textfield.TextInputLayout-->
        <!--style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"-->
        <!--android:id="@+id/jointPainTimeExposedMenuLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/jointPainExposedMenuLayout">-->

        <!--<AutoCompleteTextView-->
            <!--android:id="@+id/joint_pain_time_exposed_dropdown"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="false"-->
            <!--android:cursorVisible="false"-->
            <!--android:focusable="false"-->
            <!--android:hint="@string/joint_pain_time_input_edit_text"-->
            <!--android:focusableInTouchMode="false"/>-->
    <!--</com.google.android.material.textfield.TextInputLayout>-->

    <com.example.lansiasmart.MultiSpinner
        android:id="@+id/jointPainTimeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/jointPainExposedMenuLayout" />
    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/jointPainTimeSpinner"/>
    <TextView
        android:id="@+id/joint_pain_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/joint_pain_scale_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lineSeparator"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/joint_pain_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:thumbTint="@color/primaryDarkColor"
        android:max="10"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_text_view"/>

    <ImageView
        android:id="@+id/jointPaintScaleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/rentang_skala"
        app:layout_constraintTop_toBottomOf="@+id/joint_pain_seek_bar"/>

    <TextView
        android:id="@+id/joint_pain_indicator_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/joint_pain_indicator_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jointPaintScaleImage"
        />
    <TextView
        android:id="@+id/joint_pain_indicator_no_pain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/joint_pain_indicator_no_pain"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_indicator_title"
        app:layout_constraintEnd_toStartOf="@id/joint_pain_indicator_severe"
        />
    <TextView
        android:id="@+id/joint_pain_indicator_mild"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/joint_pain_indicator_mild"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_indicator_no_pain"
        app:layout_constraintEnd_toStartOf="@id/joint_pain_indicator_very_severe"
        />

    <TextView
        android:id="@+id/joint_pain_indicator_moderate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="@string/joint_pain_indicator_moderate"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_indicator_mild"
        />
    <TextView
        android:id="@+id/joint_pain_indicator_severe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="@string/joint_pain_indicator_severe"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_indicator_title"
        app:layout_constraintStart_toEndOf="@id/joint_pain_indicator_no_pain"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/joint_pain_indicator_very_severe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="@string/joint_pain_indicator_very_severe"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_indicator_severe"
        app:layout_constraintStart_toEndOf="@id/joint_pain_indicator_mild"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/jointPainSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_data_submit"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/joint_pain_indicator_very_severe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>